{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true,
            "complexity": {
                "noUselessFragments": "warn"
            },
            "style": {
                "useSingleVarDeclarator": "error",
                "noParameterAssign": "off",
                "noNonNullAssertion": "off"
            },
            "suspicious": {
                "noExplicitAny": "error",
                "noConsoleLog": "warn"
            },
            "nursery": {
                "all": false
            }
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 80,
        "lineEnding": "lf",
        "ignore": []
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded"
        }
    }
}
